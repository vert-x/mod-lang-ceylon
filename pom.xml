      <scope>system</scope>
      <systemPath>${system.repo}/org/antlr/antlr/2.7.7/org.antlr.antlr-2.7.7.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>system-repo</groupId>
      <artifactId>org.antlr.runtime</artifactId>
