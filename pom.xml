         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <packaging>jar</packaging>

  <modelVersion>4.0.0</modelVersion>

  <groupId>vietj</groupId>
  <artifactId>lang-ceylon</artifactId>
  <version>1.0.0-alpha3-SNAPSHOT</version>

  <properties>
    <!-- Can be overriden from command line -->
    <!--<system.repo>${env.CEYLON_HOME}/repo</system.repo>-->
    <system.repo>/Users/julien/java/ceylon/ceylon-dist/dist/repo</system.repo>
    <user.repo>${user.home}/.ceylon/repo</user.repo>
    <user.cache>${user.home}/.ceylon/cache</user.cache>
  </properties>

