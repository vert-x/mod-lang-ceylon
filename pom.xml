      <artifactId>com.redhat.ceylon.compiler.java</artifactId>
      <version>1.1.0</version>
      <scope>system</scope>
      <systemPath>${system.repo}/com/redhat/ceylon/compiler/java/1.1.0/com.redhat.ceylon.compiler.java-1.1.0.jar</systemPath>
    </dependency>
    <dependency>
